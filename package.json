{
  "name": "team-creative-store",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend"
  ],
  "scripts": {
    "dev:api": "bun run --cwd packages/api dev",
    "dev:worker": "bun run --cwd packages/worker dev",
    "dev:web": "bun run --cwd packages/web dev",

    "dev:frontend": "npm --prefix frontend run dev",
    "build:frontend": "npm --prefix frontend run build",
    "install:frontend": "npm --prefix frontend ci",

    "build:web": "bun run --cwd packages/web build",

    "prisma:generate": "bun run --cwd packages/db prisma:generate",
    "prisma:migrate": "bun run --cwd packages/db prisma:migrate",
    "format": "bunx prettier -w ."
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
